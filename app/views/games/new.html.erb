<div class="position-relative m-4">
  <h1>New Game</h1>
  <%= @letters %>

  <p>What is the longest word you can find?</p>
  <form action="/score" data-turbo="false" method="post">
    <div class="mb-3">
      <input class="form-label" type="text" name="word">
      <input class="form-label" type="submit" value="Play">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag "letters", @letters%>
    </div>
  </form>

</div>
